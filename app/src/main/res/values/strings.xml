    <string-array name="q1">
        <item>What is the capital city of Greece?</item>
        <item>Vienna</item>
        <item>Volos</item>
        <item>Athens</item>
        <item>Sparta</item>
        <item>opt3</item>
    </string-array>

    <string-array name="q2">
        <item>What is the capital city of Ghana?</item>
        <item>Abzurbistan</item>
